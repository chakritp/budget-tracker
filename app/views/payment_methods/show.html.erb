<div class="page-title">
    <div class="title_left">
      <h3>Payment Methods</h3>
    </div>
  </div>
  
  <div class="clearfix"></div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="x_panel">
        <div class="buttons-row">
          <a href="<%= payment_methods_path %>" class="btn btn-success"><i class="fa fa-arrow-left"></i> Back to Payment Methods</a>
        </div>
        <div class="x_title">
          <% if @payment_method.payment_type == 'Cash' %>
            <h2>Cash</h2>
          <% else %>
            <h2><%= "#{@payment_method.bank} #{@payment_method.last_four_digits}"%></h2>
          <% end %>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <dl class="dl-horizontal">

            <dt>ID</dt>
            <dd><%= @payment_method.id %></dd>

            <dt>Type</dt>
            <dd><%= @payment_method.payment_type %></dd>

            <dt>Last Four Digits</dt>
            <dd><%= "#{@payment_method.last_four_digits}" if @payment_method.last_four_digits.present? %></dd>

            <dt>Date Added</dt>
            <dd><%= @payment_method.created_at.in_time_zone('America/Los_Angeles').strftime("%I:%M%p %m/%d/%Y") %></dd>

            <dt>Number of Transactions</dt>
            <dd><%= @payment_method.transactions.count %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Transactions</h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <% if @payment_method.transactions.present? %>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Date</th>
                  <th>Name</th>
                  <th>Amount</th>
                  <th>Location</th>
                  <th>Description</th>
                  <th>Category</th>
                  <th>Actions</th>
                </tr>
              </thead>
                
              <% @payment_method.transactions.each do |t| %>
                <tr>
                  <!-- ID -->
                  <td><%= t.id %></td>
    
                  <!-- Date -->
                  <td><%= t.date %></td>
    
                  <!-- Name -->
                  <td><%= link_to t.name, transaction_path(t) %></td>
    
                  <!-- Amount -->
                  <td class="<%= t.is_expense ? 'text-danger' : 'text-success'%>"><%= "$#{t.amount}" %></td>
    
                  <!-- Location -->
                  <td><%= t.location %></td>
    
                  <!-- Description -->
                  <td><%= t.description %></td>
    
                  <!-- Category -->
                  <td><%= t.category %></td>

                  <!-- Actions -->
                  <td><%= link_to "View", transaction_path(t), class: 'btn btn-info' %></td>
                </tr>
              <% end %>
            </table>
          <% else %>
            <h5>There are no transactions for this payment method</h5>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
    