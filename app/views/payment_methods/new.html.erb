<div class="page-title">
  <div class="title_left">
    <h3>Payment Methods</h3>
  </div>
</div>
  
<div class="clearfix"></div>
  
<div class="row">
  <div class="col-md-12">
    <div class="x_panel">
      <div class="buttons-row">
        <%= link_to "<i class='fa fa-arrow-left'></i> Back to Payment Methods".html_safe, payment_methods_path, class: "btn btn-info" %>
      </div>

      <div class="x_title">
        <h2>New Payment Method</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <%= form_for @payment_method, html: { class: 'form-horizontal form-label-left' } do |f| %>
          <br>
          <div class="form-group">
            <%= f.label :payment_type, class: 'col-md-3 control-label' %>
            <div class="col-md-4">
              <%= f.select :payment_type, ["Debit Card", "Credit Card"], {}, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :bank, class: 'col-md-3 control-label' %>
            <div class="col-md-4">
              <%= f.text_field :bank, class: 'form-control', placeholder: "Bank name" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :last_four_digits, "Last Four Digits of Card", class: 'col-md-3 control-label' %>
            <div class="col-md-4">
              <%= f.text_field :last_four_digits, class: 'form-control', placeholder: "1234" %>
            </div>
          </div>

          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-4 col-md-offset-3">
              <%= f.submit "Add Payment Method", class: 'btn btn-success'%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>