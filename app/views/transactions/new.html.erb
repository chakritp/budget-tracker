<div class="page-title">
  <div class="title_left">
    <h3>Transactions</h3>
  </div>
</div>
  
<div class="clearfix"></div>
  
<div class="row">
  <div class="col-md-12">
    <div class="x_panel">
      <div class="buttons-row">
        <%= link_to "<i class='fa fa-arrow-left'></i> Back to Transactions".html_safe, transactions_path, class: "btn btn-info" %>
      </div>

      <div class="x_title">
        <h2>New Transaction</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <%= form_for @transaction, html: { class: 'form-horizontal form-label-left' } do |f| %>
          <br>
          <div class="form-group">
            <%= f.label :amount, "Amount*", class: 'col-md-3 control-label' %>
            <div class="col-md-2">
              <span class="fa fa-dollar form-control-feedback left" aria-hidden="true"></span>
              <%= f.text_field :amount, class: 'form-control text-center' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :name, "Name*", class: 'col-md-3 control-label' %>
            <div class="col-md-4">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :location, class: 'col-md-3 control-label' %>
            <div class="col-md-4">
              <%= f.text_field :location, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, class: 'col-md-3 control-label' %>
            <div class="col-md-4">
              <%= f.text_area :description, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :category, "Category", class: 'col-md-3 control-label' %>
            <div class="col-md-4">
              <%= f.select :category, @categories, {}, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :payment_method_id, "Payment Method", class: 'col-md-3 control-label' %>
            <div class="col-md-4">
              <%= f.select :payment_method_id, @payment_methods_select_options, {}, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :date, class: 'col-md-3 control-label' %>
            <div class="col-md-2">
              <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
              <%= f.text_field :date, readonly: true, class: 'form-control text-center', id: 'date' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :is_expense, 'Transaction Type', class: 'col-md-3 control-label' %>
            <div class="col-md-4">
              <div class="btn-group">
                <button type="button" class="btn btn-default" id="expenseButton">
                  <%= f.radio_button :is_expense, true, checked: true, class: 'form-control', id: 'expenseRadio', style: 'display: none;' %>
                  Expense
                </button>
                <button type="button" class="btn btn-default" id="incomeButton">
                  <%= f.radio_button :is_expense, false, class: 'form-control', id: 'incomeRadio', style: 'display: none;' %>
                  Income
                </button>
              </div>
            </div>
          </div>
          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-4 col-md-offset-3">
              <%= f.submit "Add Transaction", class: "btn btn-success"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'transaction_form' %>