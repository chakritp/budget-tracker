<div class="page-title">
  <div class="title_left">
    <h3>
      Transactions
      <small class="<%= @transaction.is_expense ? 'text-danger' : 'text-success'%>">
        <%= @transaction.is_expense ? "Expense" : "Income" %>
      </small>
    </h3>
  </div>
</div>

<div class="clearfix"></div>

<div class="row">
  <div class="col-md-12">
    <div class="x_panel">
      <div class="buttons-row">
        <a href="<%= transactions_path %>" class="btn btn-success"><i class="fa fa-arrow-left"></i> Back to Transactions</a>

        <div class="btn-group pull-right">
          <%= link_to "Edit", edit_transaction_path(@transaction), class: 'btn btn-warning' %>
          <%= link_to "Delete", transaction_path(@transaction), class: 'btn btn-danger', method: 'delete', data: { confirm: "Are you sure you want to delete this transaction?"} %>
        </div>
      </div>
      <div class="x_title">
        <h2><%= "ID: #{@transaction.id} - #{@transaction.name}" %></h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <dl class="dl-horizontal">
          <dt>Transaction Type</dt>
          <dd class="<%= @transaction.is_expense ? 'text-danger' : 'text-success'%>"><%= @transaction.is_expense ? "Expense" : "Income" %></dd>

          <dt>Amount</dt>
          <dd class="<%= @transaction.is_expense ? 'text-danger' : 'text-success'%>"><%= format_amount(@transaction.amount) %></dd>

          <dt>Location</dt>
          <dd><%= @transaction.location %></dd>

          <dt>Description</dt>
          <dd><%= @transaction.description %></dd>

          <dt>Date</dt>
          <dd><%= format_date(@transaction.date) %></dd>

          <div class="ln_solid"></div>
          <dt>Payment Method</dt>
          <dd><%= link_to format_payment_method(@transaction.payment_method), payment_method_path(@transaction) %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>