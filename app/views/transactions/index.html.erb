<div class="page-title">
  <div class="title-left">
    <h3>Transactions</h3>
  </div>
</div>

<div class="clearfix"></div>

<div class="row">
  <div class="col-md-12">
    <div class="x-panel">
      <div class="x-content">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Date</th>
              <th>Name</th>
              <th>Amount</th>
              <th>Location</th>
              <th>Description</th>
              <th>Category</th>
            </tr>
          </thead>
          
          <% @transactions.each do |t| %>
            <tr>
              <!-- ID -->
              <td><%= t.id %></td>

              <!-- Date -->
              <td><%= t.date %></td>

              <!-- Name -->
              <td><%= t.name %></td>

              <!-- Amount -->
              <td><%= "$#{t.amount}" %></td>

              <!-- Location -->
              <td><%= t.location %></td>

              <!-- Category -->
              <td><%= t.category %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
